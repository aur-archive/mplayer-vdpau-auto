pkgname=mplayer-vdpau-auto
pkgver=2.0
pkgrel=1
pkgdesc='Simple mplayer wrapper script that autodetects VDPAU relevant file types and passes the correct options on to mplayer for VDPAU decoding.'
arch=(any)
license=(GPL)
source=(mplayer-vdpau-auto)
url=https://wiki.archlinux.org/index.php/Mplayer
depends=('mplayer')
build() {
   install -D $pkgname $pkgdir/usr/bin/$pkgname
}
sha256sums=('01adc9d14cc67d48fe93b874d5669a55d9c891a995200df5ae7b7f32fc4c6aa3')
